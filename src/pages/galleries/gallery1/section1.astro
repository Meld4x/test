---
import Layout from '../../../layouts/Layout.astro';
const pageTitle = "Gallery1-1";
export const frontmatter = {
  pageTitle: "Gallery1-1"
};

import { Image } from 'astro:assets';

const imageFiles = await Astro.glob('../../../assets/galleries/gallery1/section1/*');

---

<Layout pageTitle={pageTitle}>
  <div id="container">
    <main>
      <h2>{pageTitle}</h2>
  <p>
  Section 1 |
  <a href="../section2/">Section 2</a>
  </p>
  </main>
  </div>

<div id="galleryimages">
<div class="columns-1 sm:columns-2 md:columns-3 lg:columns-4 gap-3 mb-5 mx-auto w-full px-4">
    {
      imageFiles.map((img) => (
        <Image
          src={img.default}
          width="400"
          alt="Photo of a pizza"
          class="mb-3 w-full rounded"
        />
      ))
    }
  </div>
</div>
</Layout>